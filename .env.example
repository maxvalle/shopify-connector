# Shopify Configuration
SHOPIFY_SHOP_URL=everstox-coding-challenge.myshopify.com
SHOPIFY_API_TOKEN=shpat_xxx
SHOPIFY_API_VERSION=2024-01

# Everstox Configuration
EVERSTOX_API_URL=https://api.demo.everstox.com
EVERSTOX_SHOP_ID=your-shop-id

# Tag Filtering
# Comma-separated lists of tags for filtering orders
# Whitelist: Only orders with at least one of these tags are included (empty = include all)
# Blacklist: Orders with any of these tags are excluded (takes precedence over whitelist)
TAG_WHITELIST=vip,express,priority
TAG_BLACKLIST=hold,do-not-ship,test
# Tag matching mode: exact, contains, or regex
TAG_MATCH_MODE=exact

# Logging Configuration
# Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Format: console (colored output) or json (structured logging)
LOG_FORMAT=console
